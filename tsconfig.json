{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": false,
    "checkJs": false,
    "jsx": "react",
    "target": "es5",
    "moduleResolution": "node",
    "typeRoots": [
      "./node_modules/@types/",
      "./@types/"
    ]
  },
  "include": [
    "./@types/",
    "./src/",
    "./tests/",
    "./examples/src/"
  ]
}
